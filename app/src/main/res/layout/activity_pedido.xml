<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011220"
    tools:context=".PedidoActivity">

    <Button
        android:id="@+id/btnAtrasP"
        android:layout_width="63dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_backspace"
        android:onClick="atras"
        app:layout_constraintBottom_toTopOf="@+id/etId_pedido"
        app:layout_constraintEnd_toStartOf="@+id/textView12"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnCrearP"
        android:layout_width="53dp"
        android:layout_height="58dp"
        android:background="@drawable/ic_add"
        android:onClick="crear"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnActualizarP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.663"
        app:layout_constraintStart_toEndOf="@+id/etId_pedido"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.819" />

    <Button
        android:id="@+id/btnActualizarP"
        android:layout_width="53dp"
        android:layout_height="58dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_update"
        android:onClick="actualizar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnEliminarP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.663"
        app:layout_constraintStart_toEndOf="@+id/etId_cliente" />

    <Button
        android:id="@+id/btnEliminarP"
        android:layout_width="53dp"
        android:layout_height="58dp"
        android:layout_marginBottom="132dp"
        android:background="@drawable/ic_delete"
        android:onClick="eliminar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/listvPedido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.663"
        app:layout_constraintStart_toEndOf="@+id/etFecha" />

    <EditText
        android:id="@+id/etId_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:text="id pedido"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/etId_cliente"
        tools:layout_editor_absoluteX="50dp" />

    <EditText
        android:id="@+id/etDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:text="descripcion"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        tools:layout_editor_absoluteX="50dp" />

    <EditText
        android:id="@+id/etFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Dirección"
        android:inputType="textPersonName"
        android:text="fecha"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/etDescripcion"
        tools:layout_editor_absoluteX="50dp" />

    <EditText
        android:id="@+id/etNombrep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="Id cliente"
        android:inputType="textPersonName"
        android:text="nombre"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/etFecha"
        tools:layout_editor_absoluteX="50dp" />

    <EditText
        android:id="@+id/etId_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="Teléfono"
        android:inputType="textPersonName"
        android:text="id cliente"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/etNombrep"
        tools:layout_editor_absoluteX="50dp" />

    <ListView
        android:id="@+id/listvPedido"
        android:layout_width="310dp"
        android:layout_height="221dp"
        android:layout_marginBottom="16dp"
        android:background="#163D5D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Portal pedido"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/etId_pedido"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.383"
        tools:layout_editor_absoluteX="153dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de pedidos"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="442dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="155dp" />

</androidx.constraintlayout.widget.ConstraintLayout>